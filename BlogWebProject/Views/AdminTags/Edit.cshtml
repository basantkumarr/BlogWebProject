@model BlogWebProject.Models.ViewModels.EditTagRequest;

@{
    ViewData["Title"] = "Edit";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Edit Tag - Admin Functionality </h1>
    </div>
</div>
 <div class="row">
    <div class="col-md-4">
        <form   method="post">
             <div class="  mb-3">
                <label  class="form-label">Id</label>
                <input type="text" id="id" asp-for="Id" class="form-control"  readonly/>
             </div>
            <div class=" mb-3">
                <label   class="control-label">Name</label>
                <input type="text" id="name" asp-for="Name" class="form-control" />
             </div>
            <div class=" mb-3">
                <label  class="control-label">Display Name </label>
                <input type="text" id="name" asp-for="DisplayName" class="form-control" />


             </div>
            <div class=" mb-3">

                <button type="submit" value="Update" class="btn btn-dark">Update</button>

                <button class="btn btn-danger ms-2" type="submit" asp-area="" asp-controller="AdminTags" asp-action="Delete" >Delete</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
